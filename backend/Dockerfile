FROM oven/bun

WORKDIR /app

COPY package.json .
COPY bun.lockb .

RUN bun install --production

COPY src src
COPY lib lib
COPY schema schema
COPY tsconfig.json .
# COPY public public

# Environment variables
ARG DATABASE_URL
ENV DATABASE_URL=${DATABASE_URL}
ARG RESEND_API_KEY
ENV RESEND_API_KEY=${RESEND_API_KEY}
ARG UPLOAD_FOLDER
ENV UPLOAD_FOLDER=${UPLOAD_FOLDER}

ARG JUDGE0_URL
ENV JUDGE0_URL=${JUDGE0_URL}
ARG JUDGE0_API_TOKEN
ENV JUDGE0_API_TOKEN=${JUDGE0_API_TOKEN}
ARG API_URL
ENV API_URL=${API_URL}
ARG WEB_URL
ENV WEB_URL=${WEB_URL}
ARG STRIPE_SECRET_KEY
ENV STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
ARG STRIPE_PUBLISHABLE_KEY
ENV STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
ARG STRIPE_PRODUCT_PREMIUM
ENV STRIPE_PRODUCT_PREMIUM=${STRIPE_PRODUCT_PREMIUM}
ARG STRIPE_WEBHOOK_SECRET
ENV STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

RUN mkdir ${UPLOAD_FOLDER}
RUN pwd

ENV NODE_ENV production
CMD ["bun", "src/index.ts"]

EXPOSE 3000